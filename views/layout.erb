<body>
    <div id="app">
        <div id="content">
            <%= yield %>
        </div>
        <div id="footer">
            <i class="fas fa-home" onclick="showPage('homePage')"></i>
            <i class="fas fa-qrcode" onclick="showPage('qrPage')"></i>
            <i class="fas fa-comments" onclick="showPage('chatPage')"></i>
            <i class="fas fa-vr-cardboard" onclick="window.location.href='/aframe'"></i>
        </div>
    </div>
    <script src="/js/app.js"></script>
